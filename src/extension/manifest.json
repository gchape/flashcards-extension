{
  "manifest_version": 3,
  "name": "Flashcards",
  "version": "1.0",
  "description": "A flashcard app with gesture-based rating",
  "permissions": [],
  "host_permissions": ["http://localhost:5173/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "512": "icons/icon512.png"
    }
  },
  "icons": {
    "512": "icons/icon512.png"
  },
  
  "web_accessible_resources": [
  {
    "resources": ["flashcards.html", "assets/*"],
    "matches": ["<all_urls>"]
  }
]
}
